# Galion Universal Downloader v3 - Environment Configuration
# Copy this file to .env and customize for your environment

# === Core Settings ===
GALION_ENV=development
GALION_DEBUG=true
GALION_SECRET_KEY=your-32-character-secret-key-here
GALION_API_PREFIX=/api/v1
GALION_HOST=0.0.0.0
GALION_PORT=8000

# === Database ===
# PostgreSQL (production)
DATABASE_URL=postgresql+asyncpg://galion:password@localhost:5432/galion_downloader
# SQLite (development)
# DATABASE_URL=sqlite+aiosqlite:///./data/galion.db

# === Redis ===
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# === Storage ===
DOWNLOADS_DIR=./downloads
DATA_DIR=./data
MAX_STORAGE_GB=100
CLEANUP_AFTER_DAYS=7

# === Workers ===
DOWNLOAD_WORKERS=5
TRANSCRIPTION_WORKERS=1
SCRAPER_WORKERS=2
MAX_CONCURRENT_PER_PLATFORM=3
DEFAULT_DOWNLOAD_TIMEOUT=300

# === GPU / AI ===
CUDA_VISIBLE_DEVICES=0
WHISPER_MODEL=tiny.en
WHISPER_COMPUTE_TYPE=float16
WHISPER_DEVICE=cuda

# === Rate Limiting ===
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_RPM=60
RATE_LIMIT_YOUTUBE_RPM=30
RATE_LIMIT_INSTAGRAM_RPM=10
RATE_LIMIT_TWITTER_RPM=15

# === External Tools ===
YTDLP_PATH=yt-dlp
FFMPEG_PATH=ffmpeg
TOR_PROXY=socks5://127.0.0.1:9050

# === API Keys (optional, can be set via API) ===
YOUTUBE_API_KEY=
INSTAGRAM_SESSION_ID=
TWITTER_BEARER_TOKEN=
GITHUB_TOKEN=
CIVITAI_API_KEY=
TELEGRAM_BOT_TOKEN=
HUGGINGFACE_TOKEN=

# === Monitoring (optional) ===
SENTRY_DSN=
LOG_LEVEL=INFO
LOG_FORMAT=json

# === CORS ===
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_ALLOW_CREDENTIALS=true
