{
  "manifest_version": 3,
  "name": "Galion Universal Downloader",
  "version": "2.0.0",
  "description": "Download media from any website. One-click downloads for YouTube, Instagram, TikTok, Twitter, and 30+ platforms.",
  "author": "Galion Studio",
  "homepage_url": "https://galion.studio",
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "contextMenus",
    "clipboardRead",
    "downloads"
  ],

  "host_permissions": [
    "http://localhost:3000/*",
    "*://*.youtube.com/*",
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.reddit.com/*",
    "*://*.github.com/*",
    "*://*.civitai.com/*",
    "*://*.vimeo.com/*",
    "*://*.soundcloud.com/*",
    "*://*.facebook.com/*",
    "*://*.twitch.tv/*",
    "*://*.pinterest.com/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png"
    },
    "default_title": "Galion Downloader"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*",
        "*://*.instagram.com/*",
        "*://*.tiktok.com/*",
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],

  "options_page": "options.html",
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
